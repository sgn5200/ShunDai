<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/tab1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/ivTab1"
            style="@style/bottomTab"
            android:background="@drawable/selector_tab1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tab2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivTab2"
            style="@style/bottomTab"
            android:background="@drawable/selector_tab4" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tab3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/itTab3"
            style="@style/bottomTab"
            android:background="@drawable/selector_tab2" />
    </RelativeLayout>

</LinearLayout>